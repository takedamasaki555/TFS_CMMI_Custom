<?xml version="1.0" encoding="utf-8"?>
<WorkItemQuery Version="1">
  <Wiql>
    SELECT [System.Id], 
           [System.Title], 
           [System.AssignedTo], 
           [System.State], 
           [System.WorkItemType], 
           [System.CreatedDate]
      FROM WorkItems 
     WHERE [System.TeamProject] = @project 
       AND [System.WorkItemType] = '懸案事項' 
       AND [System.State] &lt;&gt; '終了' 
  ORDER BY [System.CreatedDate]
  </Wiql>
</WorkItemQuery>